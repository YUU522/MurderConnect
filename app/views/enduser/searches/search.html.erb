
<% if @model == 'user' %>
  <div class="container">
  <h3 class="mt-1 mb-4">ユーザ名:【<%= @content %>】の検索結果</h3>
  <div class="row">
   <%= render partial: "/enduser/users/user_index", locals: { users: @records } %>
  </div>
</div>
  <style>
    .card {
      height: 100%; /* カードの高さを100%に設定 */
    }
  </style>
  
<% elsif @model == 'post' %>
    <ul class="tab" id="tagTabs">
      <% @tags.each do |tag| %>
        <li><a href="#<%= tag.tag_title %>"><%= tag.tag_title %></a></li>
      <% end %>
    </ul>
      <h3>Posts search for "<%= @content %>"</h3>
    <%= render partial: "/enduser/posts/post_card", locals: { tags: @tags, user_posts: @records } %>
      
<% elsif @model == 'hashtag' %>
    <ul class="tab" id="tagTabs">
      <% @tags.each do |tag| %>
        <li><a href="#<%= tag.tag_title %>"><%= tag.tag_title %></a></li>
      <% end %>
    </ul>
    <h3>ハッシュタグ with hashtag #"<%= @content %>"</h3>
      <%= render partial: "/enduser/posts/post_card", locals: { tags: @tags, user_posts: @records } %>
<% end %>
