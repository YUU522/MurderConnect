<div class="text-center">
  <div class="card mt-5" style="display: inline-block; width: 500px; height: 500px; background-color: rgba(255, 255, 255, 0.8);">
    <div class="card-body">
      <h3 class="mt-4">参加者一覧</h3>
      <ul>
        <% @post.participants.each do |participant| %>
          <li><%= participant.enduser.name %></li>
        <% end %>
      </ul>
    </div>
    <div class="back-btn">
      <%= link_to "元に戻る", current_admin ? admin_post_path(@post) : post_path(@post), class: "btn btn-secondary" %>
    </div>
  </div>
</div>
<style>
.back-btn{
  position: absolute;
    right: 20px;
    bottom: 20px;
}
</style>
