<div class="container mt-4">
  <%= form_for(@post, html: {class: "card p-4"}) do |f| %>
    <div class="form-group">
      <%= f.label :title %>
      <%= f.text_field :title, class: 'form-control', placeholder: 'タイトルを入力してください' %>
    </div>

    <div class="form-group">
      <%= f.label :url %>
      <%= f.text_field :url, class: 'form-control', placeholder: 'URLを入力してください' %>
    </div>

    <div class="form-group">
      <%= f.label :body %>
      <%= f.text_area :body, class: 'form-control', rows: 5, placeholder: '本文を入力してください' %>
    </div>

    <div class="form-group">
      <%= f.label :tag_id %>
      <%= f.select :tag_id, Tag.all.map { |tag| [tag.tag_title, tag.id] }, {}, class: 'form-control' %>
    </div>

    <%= f.submit "投稿", class: "btn btn-primary" %>
  <% end %>
</div>