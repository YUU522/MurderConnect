<div class="container mt-4">
  <div class="row justify-content-center">
    <div class="col-md-6">
     <%= form_with(model: @enduser, url: admin_enduser_path(@enduser.id), method: :patch, class: "bg-light p-4 rounded") do |form| %>
        <!-- 他のフォームフィールド... -->
        <div class="form-group">
          <%= form.label :profile_picture, class: "font-weight-bold" %>
          <%= form.file_field :profile_picture, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= form.label :name, class: "font-weight-bold" %>
          <%= form.text_field :name, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= form.label :bio, class: "font-weight-bold" %>
          <%= form.text_area :bio, class: "form-control" %>
        </div>
        
        <div class="form-row">
          <div class="col">
            <%= form.label :playlist, class: "font-weight-bold" %>
            <%= form.text_area :playlist, class: "form-control", rows: 10 %>
          </div>

          <div class="col">
            <%= form.label :wantlist, class: "font-weight-bold" %>
            <%= form.text_area :wantlist, class: "form-control", rows: 10 %>
          </div>
        </div>
        <table class="table">
          <tr>
            <th class="table-active">会員ステータス</th>
            <td>
              <div class="form-check">
                <%= form.radio_button :is_deleted, false, id: "active_status" %>
                <%= form.label :is_deleted, "有効", class: "form-check-label", for: "active_status" %>
              </div>
              <div class="form-check">
                <%= form.radio_button :is_deleted, true, id: "inactive_status" %>
                <%= form.label :is_deleted, "退会", class: "form-check-label", for: "inactive_status" %>
              </div>
            </td>
          </tr>
        </table>

        <!-- 更新ボタン -->
        <div class="text-center mt-3">
          <%= form.submit '更新', class: 'btn btn-primary' %>
        </div>
      <% end %>
    </div>
  </div>
</div>