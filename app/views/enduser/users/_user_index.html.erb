<% users.each do |user| %>
  <% unless user.email == "guest@example.com" || user.is_deleted %>
    <div class="col-md-4 mb-4">
      <div class="card" style="height: 120px;">
        <div class="card-body d-flex align-items-center">
          <% if user.profile_picture.attached? %>
            <%= image_tag user.profile_picture.variant(resize: "100x100"), class: "mr-3", alt: "User Avatar" %>
          <% else %>
            <%= image_tag "default_profile_picture.png", class: "mr-3", alt: "Default Avatar", width: 100, height: 100 %>
          <% end %>
          <div>
            <h5 class="card-title">
              <%= link_to user.name, user_url(user) %>
            </h5>
            <p class="card-text"><%= user.bio.truncate(20, omission: 'â€¦') %></p>
           
          </div>
        </div>
      </div>
    </div>
  <% end %>
<% end %>