<div class="container mt-4">
  <div class="row">
    <div class="col-md-6">
      <h1>Welcome, <%= @enduser.name %></h1>
      <p>Bio: <%= @enduser.bio %></p>
      <p>Playlist: <%= @enduser.playlist %></p>
      <p>Wantlist: <%= @enduser.wantlist %></p>
      <div class="actions">
        <%= link_to "Edit", edit_user_path(@enduser), class: "btn btn-primary" %>
        <%= link_to "Favorite Users", favorite_users_enduser_path(@enduser), class: "btn btn-secondary" %>
      </div>
    </div>

    <div class="col-md-6">
      <ul class="nav nav-tabs" id="myTab" role="tablist">
        <li class="nav-item">
          <a class="nav-link active" id="playlist-tab" data-toggle="tab" href="#playlist" role="tab" aria-controls="playlist" aria-selected="true">Playlist</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" id="wantlist-tab" data-toggle="tab" href="#wantlist" role="tab" aria-controls="wantlist" aria-selected="false">Wantlist</a>
        </li>
      </ul>

      <div class="tab-content" id="myTabContent">
        <div class="tab-pane fade show active" id="playlist" role="tabpanel" aria-labelledby="playlist-tab">
          <h2>Playlist</h2>
          <%= @enduser.playlist %> <!-- ここにプレイリストの表示方法を追加 -->
        </div>

        <div class="tab-pane fade" id="wantlist" role="tabpanel" aria-labelledby="wantlist-tab">
          <h2>Wantlist</h2>
          <%= @enduser.wantlist %> <!-- ここにウォントリストの表示方法を追加 -->
        </div>
      </div>
    </div>
  </div>
</div>